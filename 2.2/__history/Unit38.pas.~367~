		form38.Width := form38.Width - form39.Width;
		form39.Left	 := form38.Left+form38.Width;
		form39.Top	 := form38.Top;
	end;
end else
	if form38.WindowState = wsMaximized then
		form38.Width := form38.Width + form39.Width;
end;

