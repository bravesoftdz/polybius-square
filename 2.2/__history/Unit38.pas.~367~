procedure TForm38.N14Click(Sender: TObject);
var
	i						:	integer;
	NeL					:	AnsiString;
	t0					: cardinal;
	buf					: AnsiString;
	pointer			: PAnsiString;
	keyptr			: Pkey;
	turbo_mode	:	boolean;
	fill_zero		:	boolean;
	freq_analyze:	boolean;
begin
		maskcollector;
		keyptr 			 := @table;
		freq_analyze := pagesdlg.checkbox1.checked;
		turbo_mode 	 := pagesdlg.checkbox4.checked;
		fill_zero 	 := pagesdlg.checkbox2.checked;
		t0					 :=	gettickcount;
		if length(volidate(@table)) <> 0 then
			if turbo_mode then begin
       messageBox(
                  handle,
                  PChar('Ключ повреждён! Продолжить?'+#$0D+#$0A+
                         'Если да, отключите "Турбо - режим."'),
                  PChar('Внимай!'),
                  MB_ICONWARNING+
                  MB_OK
                  );
       EXIT;
			end
			else
			if messageBox(
                  handle,
                  PChar('Ключ повреждён! Продолжить?'),
                  PChar('Внимай!'),
									MB_ICONWARNING+
                  MB_YESNO
                  ) = 7 then EXIT;

	if binary_mode then begin

		{if length(table2)>0 then
			for I := 0 to 255 do
				table[i]:=table2[form39.trackbar1.position-1][i]; }
		if length(binary_data) >= Thresold then begin
			Threads.Run('encode');
			EXIT;
		end else begin
    pointer := @binary_data;    //get data addr
		if turbo_mode then begin
			invert(keyptr);
			file_decode(pointer,keyptr,fill_zero); // :-)
			invert(keyptr);
		{* invert again to make source key
		 * In that case, decode(data, decode(key,key)) = encode(data,key)
		 * Because decode faster than encode. }
		end else
			file_encode(pointer,keyptr,fill_zero);
		end;
		form39.label39.Caption := 'Encode/Decode Time: '+inttostr(gettickcount-t0)+'ms';
		if freq_analyze then
			frequence := Frequency_analysis(pointer);            //frequency analyze
		trackbar.Position:=1;
		trackbar.Position:=0;
	end
  else begin
	I:=0; buf:='';
  case pagesdlg.RadioGroup.ItemIndex of //New line format
		0:NeL:=#$0D+#$0A;          //CR+LF
    1:NeL:=#$0D;               //CR
    2:NeL:=#$0A;               //LF
    3:NeL:='';
  end;
  while I < Richedit1.Lines.Count do begin
		buf := buf + Richedit1.Lines[I];
    if I < Richedit1.Lines.Count-1 then
			buf := buf + NeL;   //new line
		I := I + 1
  end;
	richedit1.Lines.Clear;
	if not pagesdlg.checkbox3.checked then begin
		file_encode(@buf,keyptr, pagesdlg.checkbox2.checked);
		if freq_analyze then
			frequence := Frequency_analysis(@buf);
		for I := 0 to 255 do
			table[i] := i;
		richedit1.Lines[0]:=encode( buf,
																keyptr,
																strtoint(pagesdlg.Edit1.text),
																pagesdlg.edit2.text
															);
	end
  else begin
		pointer := @buf;
		file_encode(pointer, keyptr, pagesdlg.checkbox2.checked);
		if freq_analyze then
			frequence := Frequency_analysis(pointer);            //frequency analyze
		richedit1.Lines[0]:=pointer^;
  end;
end;
if freq_analyze then
	form39.draw_graph(frequence);
end;

procedure TForm38.N15Click(Sender: TObject);
var
		i						:	integer;
		buf1				:	AnsiString;
		buf2				:	AnsiString;
		Nel					:	AnsiString;
		//tla				:	boolean;
		t0					: cardinal;
		pointer			: PAnsiString;
		keyptr			: Pkey;
		freq_analyze:	boolean;
begin
freq_analyze := pagesdlg.checkbox1.checked;
maskcollector;
keyptr := @table;
    if length(volidate(keyptr)) <> 0 then
    if messageBox(
                  handle,
                  PChar('Ключ повреждён! Продолжить?'),
                  PChar('Внимай!'),
                  MB_ICONWARNING+
                  MB_YESNO
									) = 7 then EXIT;
if binary_mode then begin
	if length(binary_data) >= Thresold then begin
			Threads.run('decode');
			EXIT;
	end else begin
		pointer := @binary_data;  //get data addr
		t0		  := gettickcount;
		file_decode(pointer,keyptr, pagesdlg.CheckBox2.Checked);  //decode data on pointer
		form39.label39.Caption:='Encode/Decode Time: '+inttostr(gettickcount-t0)+'ms';
		if freq_analyze then
			frequence := Frequency_analysis(pointer);
		trackbar.Position:=1;
		trackbar.Position:=0;  //Perform trackbar.onChange
	end;
end
else begin
	i:=0; buf1:=''; buf2:='';
  case pagesdlg.RadioGroup.ItemIndex of //New line format
    0:NeL:=#$0D+#$0A;
    1:NeL:=#$0D;
    2:NeL:=#$0A;
    3:NeL:='';
  end;
  while I < Richedit1.Lines.Count do begin
		buf1 := buf1 + Richedit1.Lines[I];
		if I < Richedit1.Lines.Count - 1 then
			buf1 := buf1+NeL;   //new line
		I := I + 1
  end;
form38.richedit1.Lines.clear;
if not pagesdlg.checkbox3.checked then begin
	buf1 := decode(garbage_collector(buf1),keyPtr);
	if freq_analyze then
		frequence := Frequency_analysis(@buf1);
  for I := 1 to length(buf1) do
		if buf1[i] <> #0 then buf2:=buf2+buf1[i];
	richedit1.lines[0] := buf2
end else begin
	pointer := @buf1;
	file_decode(pointer,keyptr,pagesdlg.checkbox2.checked);
	if freq_analyze then
		frequence := Frequency_analysis(pointer);
	richedit1.lines[0] := pointer^;
end;
{for i:=0 to length(buf1)+1 do begin
  if (buf1[i]=#$0D) and (buf1[i+1]=#$0A) and (NeL=0) then begin
    richedit1.Lines.Append(buf2);
    buf2:=''; tla:=true;
    I:=I+2;
  end;
  if (buf1[i]=#$0D) and (buf1[i+1]<>#$0A) and (NeL=1) then begin
    richedit1.Lines.Append(buf2);
    buf2:=''; tla:=true;
    I:=I+1;
  end;
  if (buf1[i]=#$0A) and (buf1[i+1]<>#$0D) and (NeL=2) then begin
    richedit1.Lines.Append(buf2);
    buf2:=''; tla:=true;
    I:=I+1;
  end;
  if buf1[i]<>#$0 and (buf1[i]<>#$0D) and (buf1[i]<>#$0A) then  //#$0 = end of data
    buf2:=buf2+buf1[i];
end;
richedit1.Lines[0]:=buf2;}
end;
if freq_analyze then
	form39.draw_graph(frequence);
end;

